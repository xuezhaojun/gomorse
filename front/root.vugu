<html>
    <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>莫斯码在线转化</title>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    </head>
        <body>
            <div>
                <nav class="bd-navbar navbar has-shadow is-spaced">
                    <div class="navbar-brand">
                        莫斯码在线转化
                    </div>
                </nav>
                
                <div class="container">
                    <div class="padding-top=3rem">
                        <div class="section">
                            <div class="columns">
                                <div class="column">
                                    <textarea id="rawText" class="textarea" placeholder="此处对应英文内容" vg-content="c.RawText" rows=10"></textarea>
                                </div>
                                <div class="column">
                                    <textarea id="morseCode" class="textarea" placeholder="此处对应莫斯电码" vg-content="c.MorseCode" rows=10></textarea>
                                </div>
                            </div>
                            <button class="button is-dark" @click="c.TranslateEngToMorse(event)">英文 -> 莫斯电码</button>
                            <button class="button" @click="c.TranslateMorseToEng(event)">莫斯电码 -> 英文</button>
                        </div>

                        <div class="section">
                            <h2 class="title">个性化莫斯电码</h2>
                            <div class="columns">
                                <div class="column">
                                    <div class="field">
                                        <input id="customizeDot" class="input" placeholder="替换morse电码中的点"></input>
                                    </div>
                                    <div class="field">
                                        <input id="customizeSlash" class="input" placeholder="替换morse电码中的斜"></input>
                                    </div>
                                    <div class="field">
                                        <button class="button is-primary" @click="c.Custimize(event)">替换</button>
                                    </div>
                                </div>
                                <div class="column">
                                    <textarea class="textarea" placeholder="个性化莫斯码" rows=10 vg-content="c.CustimizeText"></textarea>
                                </div>
                            </div>
                        </div>
                    
                    </div>
                </div>

                <footer class="footer">
                    <div class="content has-text-centered">
                        <p>
                        <strong>Morse Code</strong> by <a href="https://www.notion.so/xuezhao/c4aef15ab3fa44a6bcf394d6cedf8a8e">John</a>
                        </p>
                    </div>
                </footer>
            </div> 
        </body>
</html>

<script type="application/x-go">
import "github.com/xuezhaojun/gomorse"
import "strings"

type Root struct {
    RawText string  `vugu:"data"`
    MorseCode string  `vugu:"data"`
    CustimizeText string  `vugu:"data"`
    ErrMsg string
}

const (
    IDRawText = "rawText"
    IDMorseCode = "morseCode"
    IDCustomizeDot = "customizeDot"
    IDCustomizeSlash = "customizeSlash"
)

func getValue(id string) string {
    return js.Global().Get("document").Call("getElementById",id).Get("value").String()
}

func (c *Root) TranslateEngToMorse(e vugu.DOMEvent) {
    rawText := getValue(IDRawText)
    err := gomorse.Valid(rawText)
    if err != nil {
        c.ErrMsg = err.Error()
        return 
    }
    morseCode := gomorse.TranslateEngToMorse(rawText)
    fmt.Println("morseCode",morseCode)
    c.MorseCode = morseCode
}

func (c *Root) TranslateMorseToEng(e vugu.DOMEvent) {
    morseCode := getValue(IDMorseCode)
    rawText := gomorse.TranslateMorseToEng(morseCode)
    fmt.Println(rawText)
    c.RawText = rawText
}

func (c *Root) Custimize(e vugu.DOMEvent) {
    dot := getValue(IDCustomizeDot)
    slash := getValue(IDCustomizeSlash)
    morseCode := getValue(IDMorseCode)
    morseCode = strings.ReplaceAll(morseCode,".",dot)
    morseCode = strings.ReplaceAll(morseCode,"-",slash)
    fmt.Println("new morse code:", morseCode)
    c.CustimizeText = morseCode
}

</script>
